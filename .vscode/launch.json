{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Dev",
            "program": "${workspaceRoot}/src/index.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/bin/**",
                "${workspaceRoot}/bin/**/**"
            ],
            "preLaunchTask": "TypeScript Compile",
            "env": {
                "DEBUG" : "Kanro:*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Production",
            "program": "${workspaceRoot}/src/index.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/bin/**"
            ],
            "preLaunchTask": "TypeScript Compile",
            "env": {
                "NODE_ENV":"production",
                "DEBUG" : "Kanro:*"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}