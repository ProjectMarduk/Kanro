{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "echo",
    "isShellCommand": true,
    "args": [],
    "showOutput": "always",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "publish",
            "command": "npm",
            "isShellCommand": true,
            "args": [
                "--registry=http://localhost:4873",
                "publish"
            ]
        },
        {
            "taskName": "install kanro.core",
            "command": "npm",
            "isShellCommand": true,
            "args": [
                "install",
                "kanro.core",
                "--save"
            ]
        },
        {
            "taskName": "tsc",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "."
            ],
            "showOutput": "silent",
            "problemMatcher": "$tsc",
            "isBuildCommand": true
        }
    ]
}