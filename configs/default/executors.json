{
    "entryPoint": {
        "type": "RequestDiverter",
        "name": "KanroRouter",
        "shared": false,
        "module": {
            "name": "kanro",
            "version": "*"
        },
        "/": {
            "name": "BaseResponder",
            "module": {
                "name": "kanro",
                "version": "*"
            },
            "type": "Responder",
            "response": {
                "message": "Hello Kanro!"
            }
        },
        "/public/**": {
            "name": "BaseFileResponder",
            "module": {
                "name": "kanro",
                "version": "*"
            },
            "type": "Responder",
            "path": "./public"
        }
    },
    "globalExceptionHandlers": [
        {
            "type": "GlobalExceptionHandler",
            "module": {
                "name": "kanro",
                "version": "*"
            },
            "name": "BaseGlobalExceptionHandler"
        }
    ]
}